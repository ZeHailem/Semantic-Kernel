
<Window x:Class="SemantickKerenelDesktopApp.MainWindow"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
        xmlns:local="clr-namespace:SemantickKerenelDesktopApp" 
        xmlns:converter="clr-namespace:SemantickKerenelDesktopApp.Converters"
        xmlns:view="clr-namespace:SemantickKerenelDesktopApp.ViewModel"
        mc:Ignorable="d"  
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <converter:BooleanToEnum   x:Key="EnumToBooleanConverter"/>
    </Window.Resources>
    <StackPanel Orientation="Vertical">  
        <StackPanel Margin="10">  
            <TextBlock Text="Select AI Provider:" FontWeight="Bold" Margin="5"/>
            <RadioButton IsChecked="{Binding Provider, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static view:AIProvider.AzureOpenAI}}" Content="AureOpenAi" Margin="5" GroupName="AIProvider"/>  
            <RadioButton IsChecked="{Binding Provider, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static view:AIProvider.OpenAI}}"  Content="OpenAi" Margin="5" GroupName="AIProvider"/>  
        </StackPanel>  
        <StackPanel  Margin="10">  
            <Grid>  
                <Grid.ColumnDefinitions>  
                    <ColumnDefinition Width="Auto"/>  
                    <ColumnDefinition Width="*"/>  
                </Grid.ColumnDefinitions>  
                <Grid.RowDefinitions>  
                    <RowDefinition Height="Auto"/>  
                    <RowDefinition Height="*"/>  
                    <RowDefinition Height="Auto"/>  
                </Grid.RowDefinitions>  
                <TextBlock Text="Model Name:" FontWeight="Bold" Margin="5" Grid.Column="0" Grid.Row="0" Width="auto" HorizontalAlignment="Left"/>
                <TextBox Text="{Binding DeploymentName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" MinWidth="200" TextChanged="TextBox_TextChanged"/>
                <TextBlock Text="Api key:" FontWeight="Bold" Margin="5" Grid.Column="0" Grid.Row="1" Width="auto" HorizontalAlignment="Left"/>
                <TextBox Text="{Binding ApiKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" MinWidth="200" TextChanged="TextBox_TextChanged"/>
                <TextBlock Text="End point:" FontWeight="Bold" Margin="5" Grid.Column="0" Grid.Row="2" Width="auto" HorizontalAlignment="Left"/>
                <TextBox  Text="{Binding Endpoint, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" MinWidth="200" TextChanged="TextBox_TextChanged"/>
            </Grid>
            <TextBlock Text="{Binding Response.Content}" FontWeight="Bold" Margin="5"/>

            <StackPanel Orientation="Horizontal" Background="LightGray">
                <TextBox x:Name="InputTextBox"  Text="{Binding UserInput, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Width="400" Height="100" Margin="5" TextWrapping="Wrap" AcceptsReturn="False" KeyDown="InputTextBox_KeyDown"/>
                <Button Content="Send" Width="100" Height="30" Margin="5" />
            </StackPanel>
            
        </StackPanel>  
    </StackPanel>  
</Window>
